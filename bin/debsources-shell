#!/usr/bin/env python

import os
import readline
import rlcompleter  # NOQA
import argparse

# from pprint import pprint

from debsources.utils.conf import DebsConf
from debsources.db import sqla_session

from debsources.app import *  # NOQA


def main():
    readline.parse_and_bind("tab: complete")
    os.environ['PYTHONINSPECT'] = 'True'

    conf = DebsConf().parse_section(section="infra")
    engine, session = sqla_session.get_engine_session(conf['db_uri'])

if __name__ == "__main__":
    parser = argparse.ArgumentParser(
        description='Run Debsources shell, for debugging.')
    args = parser.parse_args()
    main()
